					<a class="nav-link top-link top-link--footer" href="#">Login</a>
				</nav><!-- nav END -->
			</div><!-- col-sm-5 END -->
		</div><!-- footer__nav END -->
		<p class="footer__colyright text-center">&copy; {{date format="YYYY"}} {{@blog.title}} - All rights reserved</p>
	</div><!-- footer__block END -->
