				<input type="text" name="username" class="form-control form-control--nickname" id="nickname" placeholder="Choose your nickname">				
				<button type="submit" class="btn btn--join-now">Join Now</button>
			</form>
			<div class="d-flex justify-content-center align-items-center">
				<p class="join-now--text text-center">Already have an account?</p>
				<button class="btn btn--login" type="button" id="loginMenu" aria-haspopup="true" aria-expanded="false">
					Login here
				</button>
			</div>
		</div><!-- join-now END -->
		<!-- footer__nav -->
		<div class="footer__nav row">
			<div class="col-sm-12 col-sm-12 col-md-5">
				<!-- navbar-nav -->
				<nav class="nav nav--footer-left">
					<a class="nav-link top-link top-link--footer" href="#">How it Works</a>
					<a class="nav-link top-link top-link--footer" href="/">Blog</a>
					<a class="nav-link top-link top-link--footer" href="#">About Us</a>
					<a class="nav-link top-link top-link--footer" href="http://help.bucksy.com/">Support</a>
				</nav><!-- navbar-nav END -->
			</div>
			<div class="d-none d-md-block col-md-2 text-center ">
				{{#if @blog.logo}}
					<a class="navbar-brand text-center" href="{{@blog.url}}">
						<img class="logo" src="{{@blog.logo}}" alt="{{@blog.title}}">
					</a>
				{{else}}
					<a class="navbar-brand text-center" href="{{@blog.url}}">
						{{@blog.title}}
					</a>
				{{/if}}
			</div>
			<!-- col-sm-5 -->
			<div class="col-sm-12 col-md-5">
				<!-- nav -->
				<nav class="nav nav--footer-right">
