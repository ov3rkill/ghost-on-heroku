<!-- footer -->
<footer class="footer container-fluid">
	<!-- footer__block -->
	<div class="footer__block container">
		<!-- join-now -->
		<div class="join-now join-now--footer">
			<h2 class="join-now__main-title join-now__main-title--footer"><span class="join-now__main-title--bold">Ready</span> to start<br class="d-xs-none"> your <span class="join-now__main-title--bold">journey?</span></h2>
